# FinOps-Teste Environment Configuration
# Copy this file to .env and update the values

# Application Configuration
APP_NAME=FinOps-Teste
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
TIMEZONE=UTC

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_DOCS_ENABLED=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finops
DB_USER=finops_user
DB_PASSWORD=finops_password
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=finops-reports
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# FinOps Configuration
COST_THRESHOLD_WARNING=1000.0
COST_THRESHOLD_CRITICAL=5000.0
DEFAULT_BUDGET_CURRENCY=USD
ENABLE_ML_RECOMMENDATIONS=true

# Monitoring Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=false
SENTRY_DSN=

# Feature Flags
ENABLE_COST_ANALYSIS=true
ENABLE_OPTIMIZATION=true
ENABLE_BUDGET_MANAGEMENT=true
ENABLE_REPORTING=true